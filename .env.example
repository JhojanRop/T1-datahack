# ===========================================
# CONFIGURACIÓN DE LA API MÉDICA
# ===========================================

# Entorno de ejecución (development, production, testing)
ENVIRONMENT=development

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
SECRET_KEY=medical-classification-api-secret-key-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CONFIGURACIÓN DE MODELOS
# ===========================================
BIOBERT_MODEL_PATH=./model/biobert_finetuned_v3
CONFIDENCE_THRESHOLD=0.7
LLM_THRESHOLD=0.6

# ===========================================
# CONFIGURACIÓN DE GEMINI LLM
# ===========================================
# Obtener API key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# ===========================================
# CONFIGURACIÓN DE PIPELINE
# ===========================================
MAX_BATCH_SIZE=50
TIMEOUT_SECONDS=30
ENABLE_CACHING=true
CACHE_TTL_MINUTES=60
PARALLEL_PROCESSING=true

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/medical_api.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# PATHS DEL PROYECTO
# ===========================================
DATA_DIR=./data
MODEL_DIR=./model
LOGS_DIR=./logs
